<Page
    x:Class="HelperUWP.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelperUWP.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VSlogin">
                <VisualState x:Name="wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="850"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="STKPNlogin.VerticalAlignment"
                                Value="Center"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="STKPNlogin.VerticalAlignment"
                                Value="Stretch"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.Background>
            <ImageBrush Stretch="Fill"  
                        ImageSource="ms-appx:///Assets/mypkuBg.png"/>
        </Grid.Background>
        <ProgressBar IsIndeterminate="True" 
                     x:Name="PRGRSlogin" 
                     Visibility="Collapsed"/>
        <StackPanel x:Name="STKPNlogin"
                    MaxWidth="500">
            <Image x:Name="pkuhelper_icon"
                   Width="150" Height="150" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,100,0,0" Source="ms-appx:///Assets/old_icon.png"/>
            <TextBox x:Name="TXTBXid" 
                     Opacity="0.6" 
                     Header="Student ID" 
                     Margin="55,0,55,10" 
                     FontSize="20"
                     BorderBrush="Transparent">
                <TextBox.InputScope>
                    <InputScope>
                        <InputScope.Names>
                            <InputScopeName NameValue="Number"/>
                        </InputScope.Names>
                    </InputScope>

                </TextBox.InputScope>
            </TextBox>

            <PasswordBox x:Name="TXTBXpassword" 
                         Header="Password" 
                         Opacity="0.6" 
                         Margin="55,5,55,10" 
                         FontSize="20"
                         BorderBrush="Transparent"/>
            <Button x:Name="BTNsubmit" 
                    Content="Sign in" 
                    Click="BTNsubmit_Click"
                    Margin="70,25,70,10" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Top" 
                    Height="42" 
                    FontSize="20"
                    Style="{StaticResource MyButtonStyle}">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                        <GradientStop Color="#FFFD7EDE" Offset="0"/>
                        <GradientStop Color="#FFE5FFA7" Offset="0.5"></GradientStop>
                        <GradientStop Color="#FFA3D4E8" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
        
    </Grid>
</Page>
